<Window x:Class="DesayunoSincrono.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesayunoSincrono"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lstDesayuno" Grid.Column="0" Margin="10"/>
        <StackPanel Grid.Column="1">
            <Button x:Name="btnOtroHilo" Content="ejemplo con new Thread()" Click="btnOtroHilo_Click"/>
        </StackPanel>
    </Grid>
</Window>
