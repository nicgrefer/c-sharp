<Window x:Class="WpfAppMvvmDI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMvvmDI"
        xmlns:views="clr-namespace:WpfAppMvvmDI.Views"
        mc:Ignorable="d"
        Title="Navegación con DI" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="Gainsboro">
            <Button Content="Inicio" Margin="5" Padding="5" 
                    Command="{Binding NavigateHomeCommand}"/>
            <Button Content="Configuración" Margin="5" Padding="5" 
                    Command="{Binding NavigateSettingsCommand}"/>
        </StackPanel>

        <ContentControl Content="{Binding CurrentViewModel}" />

    </DockPanel>
</Window>
