<Window x:Class="WpfAppPubSuscriptor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPubSuscriptor"
        mc:Ignorable="d"
        Title="Ejemplo eventos (Publicador-Suscriptor)" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <Button x:Name="BotonIniciar" 
                Content="Iniciar Proceso" 
                Click="BotonIniciar_Click" 
                Width="150" 
                Margin="10"/>

        <TextBlock x:Name="TextBlockResultado" 
                   Text="Esperando..." 
                   HorizontalAlignment="Center" 
                   FontSize="16"/>

        </StackPanel>
        <Button Content="Otra Cosa" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="Button_Click"/>

    </Grid>
</Window>
