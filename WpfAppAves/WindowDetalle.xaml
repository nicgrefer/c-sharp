<Window x:Class="WpfAppColecFotos.WindowDetalle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppColecFotos"
        MouseDoubleClick="Window_MouseDoubleClick" 
        AllowsTransparency="True" Background="Transparent"
        mc:Ignorable="d" Height="450" Width="800" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Border CornerRadius="50" Background="Transparent">
        <Image x:Name="imageDetalle" Source="{Binding Foto}" Stretch="Uniform" Margin="30">
            <Image.Effect>
                <DropShadowEffect ShadowDepth="20" BlurRadius="20"/>
            </Image.Effect>
        </Image>
    </Border>
</Window>
