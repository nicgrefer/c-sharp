<Window x:Class="WpfAppTriggersBoton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTriggersBoton"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowState="Normal" Topmost="True"
        AllowsTransparency="True" Background="Transparent"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="LightBlue" Grid.Row="0" RadiusX="10" RadiusY="10" Margin="3"/> 
        <Rectangle Fill="LightBlue" Grid.Row="1" RadiusX="10" RadiusY="10" Margin="3"/>

        <Ellipse Width="50"  Height="50" Fill="CornflowerBlue"
                 StrokeThickness="5" Stroke="Gray"
                 Margin="10" Cursor="ScrollAll"
                 MouseDown="Ellipse_MouseDown"
                 VerticalAlignment="Top" HorizontalAlignment="Right"/>

    </Grid>
</Window>
