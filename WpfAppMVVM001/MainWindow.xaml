<Window x:Class="WpfAppMVVM001.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMVVM001"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
        
    
        <StackPanel Margin="20" HorizontalAlignment="Center" >

            <Label Content="Escriba su nombre:" FontSize="16" HorizontalAlignment="Center" />

            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                       Width="200" Margin="0,0,0,10" /> 

            <Button Content="Saludar" Command="{Binding GreetCommand}" 
                    Width="100"  />

            <TextBlock Text="{Binding Greeting}"
                       FontSize="18" FontWeight="Bold" Foreground="DodgerBlue" Margin="0,20,0,0"
                       HorizontalAlignment="Center"/> 

        </StackPanel>
    
</Window>
