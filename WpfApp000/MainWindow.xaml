<Window x:Class="WpfApp000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp000"
        mc:Ignorable="d"
        Language="es-ES"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="GridMain" Cursor="Pen">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="467*"/>
            <ColumnDefinition Width="233*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cbProvincias" Grid.Column="1" Grid.Row="0" Cursor="Pen"/>
        <TextBlock x:Name="TexBlok1" Text="Mi texto ❤️❤️" Cursor="Pen" Background="#FF88FF00" />
        <Button x:Name="botSalir"
                Grid.Column="2" Grid.Row="1"
                Content="Salir"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,338,0,0" Padding="6" Height="47" Width="80" 
                Background="#FF00F9FF"
                Click="botSalir_Click" />


    </Grid>
</Window>
