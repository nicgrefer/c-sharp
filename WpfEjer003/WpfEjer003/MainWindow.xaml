<Window x:Class="WpfEjer003.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEjer003"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.Resources>
		<Style x:Key="modeloBoton" TargetType="Button">
			<Setter Property="Height" Value="94"/>
			<Setter Property="Width" Value="184"/>
		</Style>

		<!-- Plantilla PlantillaBotones -->
		<ControlTemplate x:Key="PlantillaBotones" TargetType="Button">
			<Border Background="{TemplateBinding Background}" 
			        CornerRadius="15"
			        BorderThickness="0">
				<Grid>
					<StackPanel Orientation="Horizontal" 
					           VerticalAlignment="Center" 
					           HorizontalAlignment="Left"
					           Margin="20,0,0,0">
						<!-- Círculo con color asociado al Background -->
						<Ellipse Width="60" Height="60" 
						        Fill="{TemplateBinding Tag} "/>
						<!-- Texto del botón -->
						<TextBlock Text="{TemplateBinding Content}" 
						          FontSize="14"
						          FontWeight="SemiBold"
						          Foreground="White"
						          VerticalAlignment="Center"
						          Margin="15,0,0,0"/>
					</StackPanel>
				</Grid>
			</Border>
		</ControlTemplate>
	</Window.Resources>
	
	<Grid Height="434" VerticalAlignment="Bottom">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>

		<Button Content="botón 1" 
		        Grid.Column="0"
		        Style="{StaticResource modeloBoton}"
		        Template="{StaticResource PlantillaBotones}"
		        Background="#FF9500"
		        Tag="LightGreen"
		        HorizontalAlignment="Center"
		        VerticalAlignment="Center"/>

		<Button Content="botón 2" 
		        Grid.Column="1"
		        Style="{StaticResource modeloBoton}"
		        Template="{StaticResource PlantillaBotones}"
		        Background="#FF9500"
		        Tag="LightBlue"
		        HorizontalAlignment="Center"
		        VerticalAlignment="Center"/>
	</Grid>
</Window>