<Window x:Class="WpfAppScrollView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppScrollView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <!--#region botón -->
        <Border CornerRadius="50" Background="Green" Margin="20" BorderBrush="Gray" 
                BorderThickness="5">
            <Grid>
                <Ellipse x:Name="ellipse" 
                 StrokeThickness="8" Stroke="LightGreen"
                 Margin="40" >
                    <Ellipse.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.8,0.2">
                            <GradientStop Color="Black" Offset="0.06"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Ellipse Margin="60" 
                 Cursor="Hand"
                 MouseLeftButtonDown="Ellipse_MouseLeftButtonDown" >
                    <Ellipse.Fill>
                        <RadialGradientBrush GradientOrigin="0.8,0.2">
                            <GradientStop Color="Red" Offset="1"/>
                            <GradientStop Color="White" Offset="0.06"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
        </Border>
        <!--#endregion-->
        <ScrollViewer Grid.Column="1" 
                      HorizontalScrollBarVisibility="Visible" 
                      VerticalScrollBarVisibility="Disabled"
                      Margin="10">
            <StackPanel x:Name="sp1" 
                        Background="Orange" Orientation="Horizontal" />
        </ScrollViewer>
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
            <WrapPanel x:Name="wp1"
                Background="LightBlue" />
        </ScrollViewer>
    </Grid>
</Window>
