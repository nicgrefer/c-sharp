<Window x:Class="WpfAppSpeech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSpeech"
        mc:Ignorable="d"
        Title="Formulario por Voz" Height="450" Width="400">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#E0F7FA"/>
                    <Setter Property="BorderBrush" Value="#00BCD4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <StackPanel Margin="20">
        <TextBlock Text="Formulario de Registro" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Border Background="#F0F0F0" Padding="10" Margin="0,0,0,15" CornerRadius="5">
            <StackPanel>
                <Button x:Name="BtnEscuchar" Content="INICIAR ESCUCHA" Click="BtnEscuchar_Click" Height="35" FontWeight="Bold" Background="#4CAF50" Foreground="White"/>
                <TextBlock x:Name="TxtEstado" Text="Estado: Inactivo" Margin="0,5,0,0" Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock Text="Comandos: 'Editar Nombre', 'Editar Ciudad', 'Editar Edad', 'Borrar Campo', 'Detener'" 
                           FontSize="10" FontStyle="Italic" TextWrapping="Wrap" Margin="0,5,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Label Content="Nombre Completo:"/>
        <TextBox x:Name="TxtNombre" Margin="0,0,0,10"/>

        <Label Content="Ciudad de Residencia:"/>
        <TextBox x:Name="TxtCiudad" Margin="0,0,0,10"/>

        <Label Content="Edad:"/>
        <TextBox x:Name="TxtEdad" Margin="0,0,0,20"/>

        <Label Content="Último texto detectado:" FontSize="10" Foreground="Gray"/>
        <TextBlock x:Name="TxtDebug" Text="..." Foreground="Blue" TextWrapping="Wrap"/>

    </StackPanel>
</Window>