<Window x:Class="WpfAppDocX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDocX"
        mc:Ignorable="d"
        Title="Informe con DocX" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgProductos" Grid.Row="0" AutoGenerateColumns="True" Margin="0,0,0,20"/>

        <Button Grid.Row="1" Content="📄 Generar Documento" 
                Click="Button_Click" 
                Height="40" Width="150" 
                HorizontalAlignment="Right" />
    </Grid>
</Window>
